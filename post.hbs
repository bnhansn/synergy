{{!< default}}

<div class="page-ajax-holder">
  
	<nav class="subcategories">
	</nav>

	<main class="post-ajax-holder">
	  
	  {{#post}}
	    
	    <article class="{{post_class}}">
	    	<header class="post-header">
		      <h1 class="ui dividing header">
		      	{{title}}
			      <div class="sub header">{{date}}</div>
		      </h1>
		      <p class="page-links"><i class="tags icon"></i><span>{{tags}}</span></p>
		    </header>
		    {{#if image}}
		      <img src="{{image}}" class="ui fluid rounded image post-image">
		    {{/if}}
	      <section>
	        {{content}}
	      </section>
	    </article>

			{{#author}}
				<div class="author-footer">
					<div class="ui items">
						<div class="item">
							{{#if image}}
								<div class="ui image page-links">
									<a href="{{url}}"><img src="{{image}}" class="author-image"></a>
								</div>
							{{/if}}
						  <div class="content">
						    <div class="header">{{name}}</div>
						    <div class="meta">
						    	{{#if location}}<i class="marker icon"></i><span>{{location}}</span>{{/if}}
						    	{{#if website}}<i class="linkify icon"></i><span><a href="{{website}}">{{website}}</a></span>{{/if}}
						    </div>
						    {{#if bio}}
						    	<div class="bio">
						      	<p>{{bio}}</p>
						      </div>
							  {{/if}}
						  </div>
						</div>
					</div>
				</div>
			{{/author}}

			<div id="disqus_thread"></div>
			<script type="text/javascript">
		    var disqus_shortname = 'synergy-ghost'; // required: replace example with your forum shortname
		    var disqus_identifier = '{{post.id}}';
		 
		    /* * * DON'T EDIT BELOW THIS LINE * * */
		    (function() {
	        var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
	        dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
	        (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
		    })();
			</script>
			<noscript>Please enable JavaScript to view the <a href="http://disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>
			<a href="http://disqus.com" class="dsq-brlink">comments powered by <span class="logo-disqus">Disqus</span></a>

		{{/post}}
	
	</main>

</div>